<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="ru.ancientempires.MGameLifeStartActivity$PlaceholderFragment" >

	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingBottom="10dp" >

		<TextView
			android:gravity="right"
			android:paddingRight="10dp"
			android:text="@string/rows_title"
			android:textSize="20sp" />

		<EditText
			android:id="@+id/RowsEditor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number"
			android:text="@string/rows_amount_default" >

			<requestFocus />
		</EditText>
	</TableRow>

	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingBottom="10dp" >

		<TextView
			android:gravity="right"
			android:paddingRight="10dp"
			android:text="@string/columns_title"
			android:textSize="20sp" />

		<EditText
			android:id="@+id/ColumnsEditor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number"
			android:text="@string/columns_amount_default" >

			<requestFocus />
		</EditText>
	</TableRow>

	<TableRow
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingBottom="10dp" >

		<TextView
			android:gravity="right"
			android:paddingRight="10dp"
			android:text="@string/cells_title"
			android:textSize="20sp" />

		<EditText
			android:id="@+id/CellsEditor"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ems="10"
			android:inputType="number"
			android:text="@string/cells_amount_default" >

			<requestFocus />
		</EditText>
	</TableRow>

	<TableRow android:paddingBottom="10dp" >

		<Button
			android:id="@+id/RunButton"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/run_title"
			android:textStyle="bold" />
	</TableRow>

</TableLayout>