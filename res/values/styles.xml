<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="BaseText" parent="@android:style/TextAppearance.DeviceDefault.Medium"></style>

	<style name="Text" parent="@style/BaseText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="EditText" parent="@style/BaseText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="EditTextNumber" parent="@style/EditText">
		<item name="android:inputType">number</item>
	</style>

	<style name="Button" parent="@android:style/Widget.DeviceDefault.Light.Button">
		<item name="android:inputType">number</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
	</style>

</resources>