<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="BaseText" parent="@android:style/TextAppearance.DeviceDefault.Medium"></style>

	<style name="Text" parent="@style/BaseText">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="EditText" parent="@style/BaseText">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="EditTextNumber" parent="@style/EditText">
		<item name="android:inputType">number</item>
	</style>

	<style name="Button" parent="@android:style/Widget.DeviceDefault.Light.Button">
		<item name="android:inputType">number</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_gravity">center_horizontal</item>
	</style>

</resources>
